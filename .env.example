# ============================================
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_APP_NAME="GatherMemorials"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# ============================================
# SUPABASE CONFIGURATION
# ============================================
NEXT_PUBLIC_SUPABASE_URL="your_supabase_project_url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# ============================================
# STRIPE PAYMENT PROCESSING
# ============================================
# Test keys for development (starts with sk_test_ and pk_test_)
# Production keys for live site (starts with sk_live_ and pk_live_)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Product and Price IDs for Memorial ($149)
STRIPE_MEMORIAL_PRODUCT_ID="prod_test_memorial"
STRIPE_MEMORIAL_PRICE_ID="price_test_memorial_149"
# Legacy price ID (for backwards compatibility)
STRIPE_PRICE_ID="price_your_memorial_price_id"

# ============================================
# CLOUDINARY MEDIA STORAGE
# ============================================
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"
CLOUDINARY_UPLOAD_PRESET="memorial-uploads"

# ============================================
# OPENAI FOR AI ASSISTANT
# ============================================
OPENAI_API_KEY="sk-your_openai_api_key"
OPENAI_MODEL="gpt-4-turbo-preview"
# Max tokens for obituary generation
OPENAI_MAX_TOKENS="1000"

# ============================================
# EMAIL SERVICE (Resend or Postmark)
# ============================================
EMAIL_FROM="noreply@gathermemorials.com"
RESEND_API_KEY="re_your_resend_api_key"
# Alternative: Use Postmark instead of Resend
# POSTMARK_API_KEY="your_postmark_api_key"
# Alternative: Use SendGrid
# SENDGRID_API_KEY="SG.your_sendgrid_api_key"

# Email addresses for specific purposes
ADMIN_NOTIFICATION_EMAIL="admin@gathermemorials.com"
SUPPORT_EMAIL="support@gathermemorials.com"

# ============================================
# CONTENTFUL CMS (for blog)
# ============================================
CONTENTFUL_SPACE_ID="your_space_id"
CONTENTFUL_ACCESS_TOKEN="your_access_token"
CONTENTFUL_PREVIEW_TOKEN="your_preview_token"
CONTENTFUL_ENVIRONMENT="master"

# ============================================
# ANALYTICS & MONITORING
# ============================================
# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY="your_posthog_key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Sentry Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
SENTRY_ORG="your-org-slug"
SENTRY_PROJECT="gathermemorials"

# ============================================
# GOOGLE MAPS (for service locations)
# ============================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_google_maps_api_key"
# Restrict map bounds to US (optional)
NEXT_PUBLIC_MAP_DEFAULT_CENTER_LAT="39.8283"
NEXT_PUBLIC_MAP_DEFAULT_CENTER_LNG="-98.5795"
NEXT_PUBLIC_MAP_DEFAULT_ZOOM="4"

# ============================================
# ADMIN CONFIGURATION
# ============================================
ADMIN_EMAIL="admin@gathermemorials.com"
ADMIN_PASSWORD="secure_admin_password"
# List of admin emails (comma-separated)
ADMIN_EMAILS="admin@gathermemorials.com,support@gathermemorials.com"

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Random string for session encryption (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-random-secret-here-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# JWT Secret for additional token signing
JWT_SECRET="your-jwt-secret-min-32-chars"

# ============================================
# RATE LIMITING (Optional - Upstash Redis)
# ============================================
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token"
# Rate limit settings
RATE_LIMIT_FREE_TIER="10"  # requests per minute
RATE_LIMIT_PAID_TIER="60"  # requests per minute

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_AI_OBITUARY="true"
NEXT_PUBLIC_ENABLE_GUESTBOOK="true"
NEXT_PUBLIC_ENABLE_PRAYER_LIST="true"
NEXT_PUBLIC_ENABLE_DONATIONS="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_PHOTO_GALLERY="true"
NEXT_PUBLIC_ENABLE_VIDEO_GALLERY="true"
NEXT_PUBLIC_MAINTENANCE_MODE="false"

# ============================================
# STORAGE LIMITS
# ============================================
# Max file sizes in MB
MAX_PHOTO_SIZE_MB="10"
MAX_VIDEO_SIZE_MB="100"
MAX_PHOTOS_PER_MEMORIAL="50"
MAX_VIDEOS_PER_MEMORIAL="5"

# ============================================
# CRON JOB CONFIGURATION
# ============================================
# Secret for securing cron endpoints
CRON_SECRET="your-cron-secret-key"
# Prayer reminder send time (24hr format, UTC)
PRAYER_REMINDER_HOUR="14"  # 2 PM UTC = 9 AM EST

# ============================================
# DEPLOYMENT & INFRASTRUCTURE
# ============================================
# Automatically set by Vercel, included for reference
# VERCEL_URL=""
# VERCEL_ENV=""
# VERCEL_GIT_COMMIT_SHA=""
# VERCEL_GIT_COMMIT_REF=""

# Database connection settings
DATABASE_POOL_SIZE="10"
DATABASE_CONNECTION_TIMEOUT="30"

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Enable debug mode
DEBUG="false"
# Show detailed error messages
SHOW_ERROR_DETAILS="false"
# Enable SQL query logging
LOG_SQL_QUERIES="false"
# Mock payment processing (skip Stripe in dev)
MOCK_PAYMENTS="false"
# Disable email sending in development
DISABLE_EMAIL_SENDING="false"

# ============================================
# SEO & SOCIAL
# ============================================
NEXT_PUBLIC_DEFAULT_OG_IMAGE="https://gathermemorials.com/og-image.jpg"
NEXT_PUBLIC_TWITTER_HANDLE="@gathermemorials"
NEXT_PUBLIC_FACEBOOK_APP_ID="your_facebook_app_id"

# ============================================
# BACKUP & RECOVERY
# ============================================
# S3 bucket for backups (optional)
AWS_S3_BACKUP_BUCKET="gathermemorials-backups"
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"